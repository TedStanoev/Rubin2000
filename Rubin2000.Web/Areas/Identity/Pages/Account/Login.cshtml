@page
@model LoginModel

<div class="row justify-content-center">
    <div class="col-6">
        <section>
            <form id="account" method="post">
                <h4 class="text-center text-danger text-uppercase font-italic">Log in to make appointments</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group text-center">
                    <label class="font-italic text-center" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <label class="font-italic" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-danger">Log in</button>
                </div>
                <div class="form-group text-center">
                    <p>
                        <a id="forgot-password" class="text-dark font-weight-bold" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="text-dark font-weight-bold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Register here</a>
                    </p>

                    @*<p>
                <a id="resend-confirmation" class="text-dark font-weight-bold" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>*@
                </div>
            </form>
        </section>
    </div>

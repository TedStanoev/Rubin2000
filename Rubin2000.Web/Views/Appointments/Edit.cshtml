@using Rubin2000.Services.ForAppointments.Models
@model AppointmentEditServiceModel
<div class="container">
    <form method="post">
        <input style="display: none" type="text" asp-for="ProcedureId" value="@Model.ProcedureId" />
        <div class="form-group">
            <label asp-for="ProcedureName" class="form-control bg-danger text-white font-weight-bold">Procedure:</label>
            <textarea readonly id="procedureName" class="form-control-plaintext border border-dark text-center text-danger display-4" asp-for="ProcedureName">@Model.ProcedureName</textarea>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="ClientName" class="form-control bg-danger text-white font-weight-bold">Enter name:</label>
            <input class="form-control border border-dark text-center text-danger font-weight-bolder" type="text" asp-for="ClientName" />
            <span asp-validation-for="ClientName" class="font-weight-bolder text-danger"></span>
        </div>
        <br>

        <div class="form-group">
            <label asp-for="Date" class="form-control bg-danger text-white font-weight-bold">Select date:</label>
            <input type="date" id="date" class="form-control border border-dark text-center text-danger font-weight-bolder" asp-for="Date">
            <span asp-validation-for="Date" class="font-weight-bolder text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="Time" class="form-control bg-danger text-white font-weight-bold">Select time:</label>
            <select id="time" class="form-control border border-dark text-center text-danger font-weight-bolder" asp-for="Time">
                <option>10:00</option>
                <option>10:30</option>
                <option>11:00</option>
                <option>11:30</option>
                <option>12:00</option>
                <option>12:30</option>
                <option>13:00</option>
                <option>13:30</option>
                <option>14:00</option>
                <option>14:30</option>
                <option>15:00</option>
                <option>15:30</option>
                <option>16:00</option>
                <option>16:30</option>
                <option>17:00</option>
                <option>17:30</option>
                <option>18:00</option>
            </select>
            <span asp-validation-for="Time" class="font-weight-bolder text-danger"></span>
        </div>
        <br>

        <div class="form-group">
            <label asp-for="Description" class="form-control bg-danger text-white font-weight-bold">Info: </label>
            <input type="text" id="description" class="form-control border border-dark text-center text-danger font-weight-bolder" asp-for="Description" placeholder="Add some information for the appointment[Optional]">
            <span asp-validation-for="Description" class="font-weight-bolder text-danger"></span>
        </div>
        <br>

        <div class="form-group">
            <label asp-for="EmployeeId" class="form-control bg-danger text-white font-weight-bold">Pick the Hair Stylist/Manicurist</label>
            <select asp-for="EmployeeId" id="employeeName" class="form-control border border-dark text-center text-danger font-weight-bolder">
                @foreach (var employee in Model.Employees)
                {
                    <option value="@employee.Id">@employee.Name</option>
                }
            </select>
            <span asp-validation-for="EmployeeId" class="font-weight-bolder text-danger"></span>
        </div>


        <button type="submit" class="form-control btn btn-danger text-white font-weight-bold">Submit your appointment</button>
    </form>
</div>

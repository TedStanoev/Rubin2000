@using Rubin2000.Web.Models.Appointments
@using Rubin2000.Models.Enums
@model IEnumerable<AppointmentClientViewModel>
<h1>These are my appointments:</h1>
@if (!Model.Any())
{
    <h2><a asp-controller="Services" asp-action="Index">Make your first appointment!</a></h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>
                    Procedure Name
                </td>
                <td>
                    Date
                </td>
                <td>
                    Time
                </td>
                <td>
                    Status
                </td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>
                        @appointment.ProcedureName
                    </td>
                    <td>
                        @appointment.Date
                    </td>
                    <td>
                        @appointment.Time
                    </td>
                    @if (appointment.Status == AppointmentStatus.Approved.ToString())
                    {
                        <td class="text-success">
                            @appointment.Status
                        </td>
                        <td>
                            <div>
                                <a class="alert-danger btn" asp-controller="Appointments" asp-action="Decline" asp-route-id="@appointment.AppointmentId">Decline</a>
                            </div>
                        </td>
                    }
                    else if (appointment.Status == AppointmentStatus.Declined.ToString())
                    {
                        <td class="text-danger">
                            @appointment.Status
                        </td>
                    }
                    else if (appointment.Status == AppointmentStatus.Pending.ToString())
                    {
                        <td class="text-info">
                            @appointment.Status
                        </td>
                        <td>
                            <div>
                                <a class="alert-warning btn">Edit</a>
                                <a class="alert-danger btn" asp-controller="Appointments" asp-action="Decline">Decline</a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <div>
        <p>Note: If you want to choose another time or date for an approved appointment, please contact the salon via the <a asp-controller="Contacts" asp-action="Index">contacts</a> page.</p>
    </div>
}


@using Rubin2000.Web.Models.Appointments
@model AppointmentInputViewModel
    <div class="container">
        <form method="post">
            <div class="form-group">
                <label asp-for="ProcedureName" class="form-control bg-danger text-white font-weight-bold">Procedure:</label>
                <textarea readonly id="procedureName" class="form-control-plaintext border border-danger text-center text-danger display-4" asp-for="ProcedureName">@Model.ProcedureName</textarea>
                <br>
            </div>

            <div class="form-group">
                <label asp-for="ClientName">Enter name:</label><br>
                <input type="text" asp-for="ClientName" />
                <span asp-validation-for="ClientName" class="small text-danger"></span>
                <br>
            </div>

            <div class="form-group">
                <label asp-for="Date">Select date:</label><br>
                <input type="date" id="date" asp-for="Date">
                <span asp-validation-for="Date" class="small text-danger"></span>
                <br>
            </div>

            <div class="form-group">
                <label asp-for="Time">Select time:</label><br>
                <select id="time" asp-for="Time">
                    <option>10:00</option>
                    <option>10:30</option>
                    <option>11:00</option>
                    <option>11:30</option>
                    <option>12:00</option>
                    <option>12:30</option>
                    <option>13:00</option>
                    <option>13:30</option>
                    <option>14:00</option>
                    <option>14:30</option>
                    <option>15:00</option>
                    <option>15:30</option>
                    <option>16:00</option>
                    <option>16:30</option>
                    <option>17:00</option>
                    <option>17:30</option>
                    <option>18:00</option>
                </select>
                <span asp-validation-for="Time" class="small text-danger"></span>
                <br>
            </div>

            <div class="form-group">
                <label asp-for="Description">Info: </label><br>
                <input type="text" id="description" asp-for="Description" placeholder="Add some information for the appointment[Optional]">
                <br>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeId">Pick the Hair Stylist/Manicurist</label><br />
                <select asp-for="EmployeeId" id="employeeName">
                    @foreach (var employee in Model.Employees)
                    {
                        <option value="@employee.Id">@employee.Name</option>
                    }
                </select>

                <button type="submit">Submit your appointment</button>
            </div>
        </form>
    </div>

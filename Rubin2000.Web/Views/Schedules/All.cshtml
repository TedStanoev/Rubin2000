@using Rubin2000.Services.ForAppointments.Models
@using Rubin2000.Models.Enums;
@model IEnumerable<AppointmentScheduleServiceModel>

@{
    var previousPage = ViewBag.CurrentPage - 1;
    var nextPage = ViewBag.CurrentPage + 1;
    var lastPage = Math.Ceiling(((double)ViewBag.TotalAppointments / (double)AppointmentScheduleServiceModel.AppointmentsPerPage));
    if (previousPage < 0)
    {
        previousPage = 1;
    }

}

<h1>@ViewBag.EmployeeName's Schedule</h1>

<div style="margin-bottom: 60px">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th colspan="6">
                    <div style="text-align: center">
                        <a class="badge-info btn @(ViewBag.CurrentPage == 1 ? "disabled" : string.Empty) " asp-controller="Schedules" asp-action="All" asp-route-currentPage="@previousPage"><<</a>
                        <a class="badge-info btn @(nextPage > lastPage ? "disabled" : string.Empty)" asp-controller="Schedules" asp-action="All" asp-route-currentPage="@nextPage">>></a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="width: 80px">Time</td>
                <td style="width: 320px">Procedure</td>
                <td style="width: 160px">Client's Name</td>
                <td style="width: 110px">Status</td>
                <td style="width: fit-content"></td>
            </tr>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Time</td>
                    <td>@appointment.ProcedureName</td>
                    <td>@appointment.ClientName</td>
                    @if (appointment.Status == AppointmentStatus.Approved.ToString())
                    {
                        <td class="text-success">
                            @appointment.Status
                        </td>
                        <td>
                            <div>
                                <a class="alert-warning btn" asp-controller="Appointments" asp-action="Info" asp-route-id="@appointment.AppointmentId">Info</a>
                                <a class="alert-danger btn" asp-controller="Schedules" asp-action="Decline" asp-route-id="@appointment.AppointmentId">Decline</a>
                            </div>
                        </td>
                    }
                    else if (appointment.Status == AppointmentStatus.Declined.ToString())
                    {
                        <td class="text-danger">
                            @appointment.Status
                        </td>
                        <td>
                            <div>
                                <a class="alert-warning btn" asp-controller="Appointments" asp-action="Info" asp-route-id="@appointment.AppointmentId">Info</a>
                                <a class="alert-danger btn delete-warning" asp-controller="Schedules" asp-action="Delete" asp-route-id="@appointment.AppointmentId">Delete</a>
                            </div>
                        </td>
                    }
                    else if (appointment.Status == AppointmentStatus.Pending.ToString())
                    {
                        <td class="text-warning">
                            @appointment.Status
                        </td>
                        <td>
                            <div>
                                <a class="alert-success btn" asp-controller="Schedules" asp-action="Approve" asp-route-id="@appointment.AppointmentId">Approve</a>
                                <a class="alert-warning btn" asp-controller="Appointments" asp-action="Info" asp-route-id="@appointment.AppointmentId">Info</a>
                                <a class="alert-danger btn" asp-controller="Schedules" asp-action="Decline" asp-route-id="@appointment.AppointmentId">Decline</a>
                            </div>
                        </td>
                    }
                    else if (appointment.Status == AppointmentStatus.Expired.ToString())
                    {
                        <td class="text-dark">
                            @appointment.Status
                        </td>
                        <td>
                            <div>
                                <a class="alert-warning btn" asp-controller="Appointments" asp-action="Info" asp-route-id="@appointment.AppointmentId">Info</a>
                                <a class="alert-danger btn delete-warning" asp-controller="Schedules" asp-action="Delete" asp-route-id="@appointment.AppointmentId">Delete</a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>

    </table>
</div>
